
//PARTE DAS CLASSE ,ATRIBUTOS E METODOS


import java.util.Scanner;


public class Capitulo {
  
  Caracteristicapersonagem personagem;
  int novaenergia;
  String  nome;
  String texto;
  String escolha1;
  String escolha2;
  Scanner his;



        Capitulo( Caracteristicapersonagem personagem,
                   int novaenergia,
                   String  nome,
                  String texto,
                  String escolha1,
                  String escolha2,
                  Scanner his
                   )
           {

            this.personagem=personagem;
            this.novaenergia=novaenergia;
            this.nome=nome;            
            this.texto=texto;
            this.escolha1=escolha1;
            this.escolha2=escolha2;           
            this.his=his;
        }


            
            /**
             * 
             */
             void mostra(){
              
              System.out.println(this.nome);
              System.out.println("________________________________");
              System.out.println(this.texto); 
              this.personagem.qtenergia(this.novaenergia);

           if (escolha1!=null){

              System.out.println(this.escolha1);}

            if (escolha2!=null){
              System.out.println(this.escolha2);

            }
              System.out.println("________________________________");
              
            }
 
            int escolher(){

              int escolha=0;

              if (escolha1!=null && escolha2!=null){
               
                
                while(escolha==0){
                String resp= his.nextLine();
                if ( resp.equals(escolha1)){
                   escolha=1;

                }else if(resp.equals(escolha2)){

                   escolha=2;

                }

              }

              }

              return escolha;

            }

           }

